{% extends 'base.html.twig' %}
{% block title %}{{parent()}}Users{% endblock %}
{% block body %}
<div class="container-fluid">
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
        Liste des users</h1>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Email</th>
                            <th scope="col">Date d'Inscription</th>
                            <th scope="col">Rôle</th>
                            <th scope="col">Vérifié</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users | sort((a, b) => b.dateInscription <=> a.dateInscription) %}
                            <tr class="{{ cycle(['table-primary','table-secondary'], loop.index0) }}">
                                <td>{{ user.email}}</td>
                                <td>{{ user.dateInscription |date("m/d/Y")}}</td>
                                <td>
                                    {% if "ROLE_ADMIN" in user.roles %}
                                    Administrateur
                                    {% else %}
                                    {% if "ROLE_MOD" in user.roles %}
                                    Modérateur
                                    {% else %}
                                    Utilisateur
                                    {% endif %}
                                    {% endif %}
                                </td>
                                {% if user.isVerified %}<td>Oui</td>
                                {% else %}
                                <td>Non</td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}